<?xml version='1.0' encoding='utf-8'?>
<program_description>
    <program provider="PUT" name="TOPSIS_extremeAlternatives" version="1.0.0" displayName="TOPSIS_extremeAlternatives"/>
    <documentation>
        <description>Computes positive and negative ideal alternatives from given alternatives.</description>
        <contact><![CDATA[Witold KupÅ› <witkups@gmail.com>]]></contact>
        <url>https://github.com/Azbesciak/DecisionDeck</url>
    </documentation>
    <parameters>

        <input id="input2" name="criteria" displayName="matrix of alternatives influence" isoptional="0">
            <documentation>
                <description>Criteria of comparision</description>
            </documentation>
            <xmcda tag="criteria"/>
        </input>
        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>Definitions of alternatives.</description>
            </documentation>
            <xmcda tag="alternatives"/>
        </input>
        <input id="input3" name="performance" displayName="performance table" isoptional="0">
            <documentation>
                <description>Performance of each alternative on each criterion</description>
            </documentation>
            <xmcda tag="performanceTable"/>
        </input>
        <output id="output1" name="ideal_positive" displayName="Ideal positive alternative">
            <documentation>
                <description>Performance of positive ideal alternative</description>
            </documentation>
            <xmcda tag="performanceTable"/>
        </output>
        <output id="output2" name="ideal_negative" displayName="Ideal negative alternative">
            <documentation>
                <description>Performance of negative ideal alternative</description>
            </documentation>
            <xmcda tag="performanceTable"/>
        </output>
        <output id="output3" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="methodMessages"/>
        </output>
    </parameters>
</program_description>
