<?xml version='1.0' encoding='utf-8'?>
<program_description>
    <program provider="PUT" name="DistanceRanking" version="1.0.0" displayName="Distance Ranking"/>
    <documentation>
        <description>Computes ranking by distance ratio (nDist/(nDist+pDist) to ideal alternatives</description>
        <contact><![CDATA[Witold KupÅ› <witkups@gmail.com>]]></contact>
        <url>https://github.com/Azbesciak/DecisionDeck</url>
    </documentation>
    <parameters>

        <input id="input2" name="criteria" displayName="matrix of alternatives influence" isoptional="0">
            <documentation>
                <description>Criteria of comparision</description>
            </documentation>
            <xmcda tag="criteria"/>
        </input>

        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>Definitions of alternatives.</description>
            </documentation>
            <xmcda tag="alternatives"/>
        </input>

        <input id="input3" name="performance" displayName="performance table" isoptional="0">
            <documentation>
                <description>Performance of each alternative on each criterion</description>
            </documentation>
            <xmcda tag="performanceTable"/>
        </input>

        <input id="input6" name="ideal_positive" displayName="Ideal positive alternative" isoptional="0">
            <documentation>
                <description>Performance of positive ideal alternative</description>
            </documentation>
            <xmcda tag="performanceTable"/>
        </input>

        <input id="input7" name="ideal_negative" displayName="Ideal negative alternative" isoptional="0">
            <documentation>
                <description>Performance of negative ideal alternative</description>
            </documentation>
            <xmcda tag="performanceTable"/>
        </input>

        <input id="input5" name="criteria_scales" displayName="criteria scales" isoptional="0">
            <documentation>
                <description>Criteria scales (min/max)</description>
            </documentation>
            <xmcda tag="criteriaScales"/>
        </input>

        <input id="input4" name="weights" displayName="criteria weights" isoptional="0">
            <documentation>
                <description>Weights for criteria</description>
            </documentation>
            <xmcda tag="criteriaValues"/>
        </input>

        <output id="output1" name="ranking" displayName="final ranking">
            <documentation>
                <description>Result ranking of alternatives</description>
            </documentation>
            <xmcda tag="alternativesAssignments"/>
        </output>

        <output id="output2" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="programExecutionResult"/>
        </output>
    </parameters>
</program_description>
