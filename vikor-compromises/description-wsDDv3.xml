<?xml version='1.0' encoding='utf-8'?>
<program_description>
    <program provider="PUT" name="vikor" version="1.0.0" displayName="vikor"/>
    <documentation>
        <description>Computes class assignment for given alternatives using vikor method.</description>
        <contact><![CDATA[Witold KupÅ› <witkups@gmail.com>]]></contact>
        <url>https://github.com/Azbesciak/DecisionDeck</url>
    </documentation>
    <parameters>

        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>Definitions of alternatives.</description>
            </documentation>
            <xmcda tag="alternatives"/>
        </input>

        <input id="input2" name="s" displayName="Manhattan distance (S)" isoptional="0">
            <documentation>
                <description>weighted and normalized Manhattan distance ranking by minimum value (the maximum group utility)</description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </input>

        <input id="input3" name="r" displayName="Chebyshev distance (R)" isoptional="0">
            <documentation>
                <description>weighted and normalized Chebyshev distance ranking by minimum value (the minimum individual regret of the opponent)</description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </input>
        <input id="input4" name="method_parameters" displayName="v" isoptional="0">
            <documentation>
                <description>weight of the strategy of S and R</description>
            </documentation>
            <xmcda tag="programParameters"/>
        </input>

        <output id="output1" name="q" displayName="Group utility (Q)">
            <documentation>
                <description>weight for the strategy of maximum group utility ranking by minimum value</description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </output>
        <output id="output2" name="ranking" displayName="Overall ranking">
            <documentation>
                <description>Final ranking of all alternatives</description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </output>

        <output id="output3" name="compromiseSolution" displayName="Compromised solution">
            <documentation>
                <description>Compromised solution</description>
            </documentation>
            <xmcda tag="alternatives"/>
        </output>

        <output id="output4" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="programExecutionResult"/>
        </output>
    </parameters>
</program_description>
