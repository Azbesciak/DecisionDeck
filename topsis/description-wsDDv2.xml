<?xml version='1.0' encoding='utf-8'?>
<program_description>
    <program provider="PUT" name="TOPSIS" version="1.0.0" displayName="TOPSIS"/>
    <documentation>
        <description>Computes ranking for given alternatives and criteria using TOPSIS method.</description>
        <contact><![CDATA[Witold KupÅ› <witkups@gmail.com>]]></contact>
        <url>https://github.com/Azbesciak/DecisionDeck</url>
    </documentation>
    <parameters>

        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>Definitions of alternatives.</description>
            </documentation>
            <xmcda tag="alternatives"/>
        </input>

        <input id="input2" name="criteria" displayName="matrix of alternatives influence" isoptional="0">
            <documentation>
                <description>Criteria of comparision</description>
            </documentation>
            <xmcda tag="criteria"/>
        </input>
        <input id="input3" name="performance" displayName="performance table" isoptional="0">
            <documentation>
                <description>Performance of each alternative on each criterion</description>
            </documentation>
            <xmcda tag="performanceTable"/>
        </input>
        <input id="input4" name="weights" displayName="criteria weights" isoptional="0">
            <documentation>
                <description>Weights for criteria</description>
            </documentation>
            <xmcda tag="criteriaValues"/>
        </input>

        <output id="output1" name="ranking" displayName="final ranking">
            <documentation>
                <description>Result ranking of alternatives</description>
            </documentation>
            <xmcda tag="alternativeAffections"/>
        </output>

        <output id="output2" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="methodMessages"/>
        </output>
    </parameters>
</program_description>
