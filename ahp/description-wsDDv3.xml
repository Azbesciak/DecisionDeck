<?xml version='1.0' encoding='utf-8'?>
<program_description>
    <program provider="PUT" name="AHP" version="1.0.0" displayName="AHP"/>
    <documentation>
        <description>Computes ranking for given alternatives and criteria using AHP method.</description>
        <contact><![CDATA[Witold KupÅ› <witkups@gmail.com>]]></contact>
        <url>https://github.com/Azbesciak/DecisionDeck</url>
    </documentation>
    <parameters>

        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>Definitions of alternatives</description>
            </documentation>
            <xmcda tag="alternatives"/>
        </input>

        <input id="input2" name="criteria" displayName="criteria" isoptional="0">
            <documentation>
                <description>Criteria for comparision on all hierarchy level - must include root criterion also</description>
            </documentation>
            <xmcda tag="criteria"/>
        </input>
        <input id="input3" name="hierarchy" displayName="hierarchy of criteria" isoptional="0">
            <documentation>
                <description>Hierarchy of criteria</description>
            </documentation>
            <xmcda tag="hierarchy"/>
        </input>
        <input id="input4" name="criteria_comparisons" displayName="criteria comparisons" isoptional="0">
            <documentation>
                <description>Performance between criteria, allowed only one side (A->B or B->A, not both)</description>
            </documentation>
            <xmcda tag="criteriaComparisons"/>
        </input>
        <input id="input5" name="preference" displayName="preference of alternatives" isoptional="0">
            <documentation>
                <description>Performance between final criteria for each alternative, allowed only one side (A->B or B->A, not both)</description>
            </documentation>
            <xmcda tag="alternativesComparisons"/>
        </input>

        <output id="output1" name="ranking" displayName="final ranking">
            <documentation>
                <description>Result ranking of alternatives</description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </output>

        <output id="output2" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="programExecutionResult"/>
        </output>
    </parameters>
</program_description>
